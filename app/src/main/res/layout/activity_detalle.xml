<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagen_detalle"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@android:drawable/ic_menu_report_image" />

        <TextView
            android:id="@+id/nombre_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imagen_detalle"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:text="Nombre del producto"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/marca_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nombre_detalle"
            android:layout_below="@+id/nombre_detalle"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:text="Marca"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tienda_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/marca_detalle"
            android:layout_below="@+id/marca_detalle"
            android:layout_marginTop="13dp"
            android:text="Tienda"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/precio_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/. 200"
            android:textSize="70sp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="21dp"
            android:layout_alignTop="@+id/map"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/map"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/nombre_detalle"
            android:layout_marginBottom="42dp"
            android:onClick="map"
            android:background="@android:drawable/ic_menu_mapmode" />

        <TextView
            android:id="@+id/direccion_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Direccion"
            android:textSize="26sp"
            android:layout_below="@+id/tienda_detalle"
            android:layout_alignStart="@+id/tienda_detalle" />

        <TextView
            android:id="@+id/telefono_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/direccion_detalle"
            android:layout_below="@+id/direccion_detalle"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:text="Telefono"
            android:textSize="26sp" />
    </RelativeLayout>
</LinearLayout>