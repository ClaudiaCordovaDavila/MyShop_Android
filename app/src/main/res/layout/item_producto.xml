<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nombre_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/marca_text"
            android:text="Nombre del producto"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marca_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_text"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/foto_image"
            android:text="Marca"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tienda_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/marca_text"
            android:layout_below="@+id/marca_text"
            android:layout_marginTop="6dp"
            android:text="Tienda"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/precio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="125dp"
            android:text="S/. 200.00"
            android:textSize="30sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>